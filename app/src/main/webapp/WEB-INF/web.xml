        <jsp-file>/pages/paziente/visite_specialistiche.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>ElencoVisiteSpecialistiche</servlet-name>
        <url-pattern>/paziente/elenco-visite-specialistiche</url-pattern>
    </servlet-mapping>

    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <error-page>
        <error-code>500</error-code>
        <location>/pages/error_500.jsp</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/pages/error_404.jsp</location>
    </error-page>
    <context-param>
        <description>The folder where are stored the exported pdfs</description>
        <param-name>pdfFolder</param-name>
        <param-value>pdfs</param-value>
    </context-param>
    <context-param>
        <description>The folder where are stored the exported xls</description>
        <param-name>xlsFolder</param-name>
        <param-value>xls</param-value>
    </context-param>
</web-app>
