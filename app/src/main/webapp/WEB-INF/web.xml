        <jsp-file>/pages/medico_specialista/scheda_paziente.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>MedicoSpecialistaSchedaPaziente</servlet-name>
        <url-pattern>/medico-specialista/scheda-paziente</url-pattern>
    </servlet-mapping>
    
<!--    SSP-->
    <servlet>
        <servlet-name>SSPHome</servlet-name>
        <jsp-file>/pages/ssp/home.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>SSPHome</servlet-name>
        <url-pattern>/ssp/home</url-pattern>
    </servlet-mapping>

<!--    PAZIENTE-->
    <servlet>
        <servlet-name>PazienteHome</servlet-name>
        <jsp-file>/pages/paziente/home.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>PazienteHome</servlet-name>
        <url-pattern>/paziente/home</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>PazienteProfilo</servlet-name>
        <jsp-file>/pages/paziente/profilo.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>PazienteProfilo</servlet-name>
        <url-pattern>/paziente/profilo</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ElencoVisiteBase</servlet-name>
        <jsp-file>/pages/paziente/visite_base.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>ElencoVisiteBase</servlet-name>
        <url-pattern>/paziente/elenco-visite-base</url-pattern>
    </servlet-mapping>
    <servlet>
