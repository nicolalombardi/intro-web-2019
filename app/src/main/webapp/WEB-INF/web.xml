        <jsp-file>/pages/medico_base/ricerca_pazienti.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>MedicoBaseRicerca</servlet-name>
        <url-pattern>/medico-base/ricerca</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>MedicoBaseProfilo</servlet-name>
        <jsp-file>/pages/medico_base/profilo.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>MedicoBaseProfilo</servlet-name>
        <url-pattern>/medico-base/profilo</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>MedicoBaseSchedaPaziente</servlet-name>
        <jsp-file>/pages/medico_base/scheda_paziente.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>MedicoBaseSchedaPaziente</servlet-name>
        <url-pattern>/medico-base/scheda-paziente</url-pattern>
    </servlet-mapping>

<!--    MEDICO SPECIALISTA-->
    <servlet>
        <servlet-name>MedicoSpecialistaHome</servlet-name>
        <jsp-file>/pages/medico_specialista/home.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>MedicoSpecialistaHome</servlet-name>
        <url-pattern>/medico-specialista/home</url-pattern>
    </servlet-mapping>
    
