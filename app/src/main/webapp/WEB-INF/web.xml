        <jsp-file>/pages/medico_base/home.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>MedicoBaseHome</servlet-name>
        <url-pattern>/medico-base/home</url-pattern>
    </servlet-mapping>

    <servlet>
