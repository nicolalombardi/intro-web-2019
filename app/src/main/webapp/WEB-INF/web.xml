        <servlet-name>MedicoBaseLista</servlet-name>
        <url-pattern>/medico-base/lista</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>MedicoBaseListaVisiteBase</servlet-name>
        <jsp-file>/pages/medico_base/lista_visite.jsp</jsp-file>
